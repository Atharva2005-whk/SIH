{
  "name": "@sih/backend",
  "version": "1.0.0",
  "description": "API server for Smart Tourist Safety Monitoring & Incident Response System",
  "main": "api.cjs",
  "type": "module",
  "scripts": {
    "start": "node api.cjs",
    "dev": "tsx watch src/api.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["api", "blockchain", "tourist-safety", "express", "typescript"],
  "author": "SIH Team",
  "license": "MIT",
  "dependencies": {
    "@sih/shared": "*",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^8.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.2.1",
    "typescript": "^5.9.2",
    "tsx": "^4.20.3",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "rimraf": "^6.0.1",
    "eslint": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

